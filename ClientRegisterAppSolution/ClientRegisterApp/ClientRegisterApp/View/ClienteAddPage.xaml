<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientRegisterApp.View.ClienteAddPage">
  <ContentPage.Content>
    <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand">
      <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Padding="20">
        <Label Text="Adicionar Cliente" Font="20"/>
        <Label>Nome: </Label>
        <Entry Placeholder="Seu nome"></Entry>

        <Label>Endereço: </Label>
        <Entry Placeholder="Seu endereço"></Entry>

        <Label>Telefone: </Label>
        <Entry Placeholder="Seu telefone" ></Entry>

        <StackLayout Orientation="Vertical" Padding="30">
          <Label>Foto: </Label>
          <Image Source="http://xamarin.com/content/images/pages/forms/example-app.png" />
          <Button Text="Tirar foto"/>
        </StackLayout>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>